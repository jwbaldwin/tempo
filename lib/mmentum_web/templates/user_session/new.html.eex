<div class="flex flex-col min-h-screen text-gray-900 sm:py-6 sm:px-6 lg:px-8">
  <div class="relative sm:mt-4 sm:mx-auto sm:w-full sm:max-w-md">
    <div class="relative px-4 py-8 sm:px-10">
      <h1 class="flex w-full text-2xl font-semibold text-gray-900 justify-left">Log in</h1>
      <%= form_for @conn, Routes.user_session_path(@conn, :create), [as: :user, class: "space-y-6"], fn f -> %>
      <%= if @error_message do %>
        <div class="text-sm font-semibold text-red-500">
          <p><%= @error_message %></p>
        </div>
      <% end %>
      <%= label f, :email, class: "base-label" %>
      <%= email_input f, :email, required: true, class: "text-default base-input" %>
      <%= label f, :password, class: "base-label" %>
      <%= password_input f, :password, required: true, class: "base-input" %>
      <div class="flex items-center justify-between">
        <div class="flex items-center">
          <%= checkbox f, :remember_me, class: "w-4 h-4 border-gray-300 ~bg-slate-100 rounded focus:ring-gray-900" %>
          <%= label f, :remember_me, "Keep me logged in for 60 days", class: "text-gray-600 block ml-2 text-sm" %>
        </div>
      </div>
      <div>
        <%= submit "Log in", class: "btn-primary w-full" %>
      </div>
    <% end %>
    <div class="flex justify-center mt-8 text-sm">
      <%= link "Register", to: Routes.user_registration_path(@conn, :new), class: "btn-tertiary text-sm" %> <span class="mx-8 text-gray-500">|</span>
      <%= link "Forgot your password?", to: Routes.user_reset_password_path(@conn, :new), class: "btn-tertiary text-sm" %>
    </div>
  </div>
</div>
